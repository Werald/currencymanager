<?xml version="1.0" encoding="UTF-8"?>
<project name="currencymanager" default="all">
  
  
  <property file="currencymanager.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/UiPathV8.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.com.carrotsearch.randomizedtesting:ant-junit4:0.0.4.classpath">
    <pathelement location="${basedir}/lib/ant-junit4-0.0.4.jar"/>
  </path>
  
  <path id="library.com.j256.ormlite:ormlite-core:4.46.classpath">
    <pathelement location="${basedir}/lib/ormlite-core-4.46.jar"/>
  </path>
  
  <path id="library.com.j256.ormlite:ormlite-jdbc:5.1.classpath">
    <pathelement location="${basedir}/lib/ormlite-core-5.1.jar"/>
    <pathelement location="${basedir}/lib/ormlite-jdbc-5.1.jar"/>
  </path>
  
  <path id="library.maven:_com.j256.ormlite:ormlite-core:4.47.classpath">
    <pathelement location="${path.variable.maven_repository}/com/j256/ormlite/ormlite-core/4.47/ormlite-core-4.47.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.11.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.org.json:json:20140107.classpath">
    <pathelement location="${basedir}/lib/json-20140107.jar"/>
  </path>
  
  <path id="library.org.xerial:sqlite-jdbc:3.23.1.classpath">
    <pathelement location="${basedir}/lib/sqlite-jdbc-3.23.1.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module currency-manager -->
  
  <dirname property="module.currency-manager.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.currency-manager" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.currency-manager" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.currency-manager" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.currency-manager" value="-encoding UTF-8 -source 7 -target 7 ${compiler.args}"/>
  
  <property name="currency-manager.output.dir" value="${module.currency-manager.basedir}/target/classes"/>
  <property name="currency-manager.testoutput.dir" value="${module.currency-manager.basedir}/target/test-classes"/>
  
  <path id="currency-manager.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="currency-manager.module.production.classpath">
    <path refid="${module.jdk.classpath.currency-manager}"/>
    <path refid="library.org.json:json:20140107.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.23.1.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-core:4.46.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-jdbc:5.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.j256.ormlite:ormlite-core:4.47.classpath"/>
    <path refid="library.com.carrotsearch.randomizedtesting:ant-junit4:0.0.4.classpath"/>
  </path>
  
  <path id="currency-manager.runtime.production.module.classpath">
    <pathelement location="${currency-manager.output.dir}"/>
    <path refid="library.org.json:json:20140107.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.23.1.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-core:4.46.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-jdbc:5.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.j256.ormlite:ormlite-core:4.47.classpath"/>
    <path refid="library.com.carrotsearch.randomizedtesting:ant-junit4:0.0.4.classpath"/>
  </path>
  
  <path id="currency-manager.module.classpath">
    <path refid="${module.jdk.classpath.currency-manager}"/>
    <pathelement location="${currency-manager.output.dir}"/>
    <path refid="library.org.json:json:20140107.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.23.1.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-core:4.46.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-jdbc:5.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.j256.ormlite:ormlite-core:4.47.classpath"/>
    <path refid="library.com.carrotsearch.randomizedtesting:ant-junit4:0.0.4.classpath"/>
  </path>
  
  <path id="currency-manager.runtime.module.classpath">
    <pathelement location="${currency-manager.testoutput.dir}"/>
    <pathelement location="${currency-manager.output.dir}"/>
    <path refid="library.org.json:json:20140107.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.23.1.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-core:4.46.classpath"/>
    <path refid="library.com.j256.ormlite:ormlite-jdbc:5.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.j256.ormlite:ormlite-core:4.47.classpath"/>
    <path refid="library.com.carrotsearch.randomizedtesting:ant-junit4:0.0.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.currency-manager">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.currency-manager">
    <patternset refid="excluded.from.module.currency-manager"/>
  </patternset>
  
  <path id="currency-manager.module.sourcepath">
    <dirset dir="${module.currency-manager.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="currency-manager.module.test.sourcepath">
    <dirset dir="${module.currency-manager.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.currency-manager" depends="compile.module.currency-manager.production,compile.module.currency-manager.tests" description="Compile module currency-manager"/>
  
  <target name="compile.module.currency-manager.production" depends="register.custom.compilers" description="Compile module currency-manager; production classes">
    <mkdir dir="${currency-manager.output.dir}"/>
    <javac2 destdir="${currency-manager.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.currency-manager}/javac">
      <compilerarg line="${compiler.args.currency-manager}"/>
      <bootclasspath refid="currency-manager.module.bootclasspath"/>
      <classpath refid="currency-manager.module.production.classpath"/>
      <src refid="currency-manager.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.currency-manager"/>
    </javac2>
    
    <copy todir="${currency-manager.output.dir}">
      <fileset dir="${module.currency-manager.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.currency-manager.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.currency-manager.tests" depends="register.custom.compilers,compile.module.currency-manager.production" description="compile module currency-manager; test classes" unless="skip.tests">
    <mkdir dir="${currency-manager.testoutput.dir}"/>
    <javac2 destdir="${currency-manager.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.currency-manager}/javac">
      <compilerarg line="${compiler.args.currency-manager}"/>
      <bootclasspath refid="currency-manager.module.bootclasspath"/>
      <classpath refid="currency-manager.module.classpath"/>
      <src refid="currency-manager.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.currency-manager"/>
    </javac2>
    
    <copy todir="${currency-manager.testoutput.dir}">
      <fileset dir="${module.currency-manager.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.currency-manager" description="cleanup module">
    <delete dir="${currency-manager.output.dir}"/>
    <delete dir="${currency-manager.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.currency-manager" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.currency-manager" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>